{
    "$id": "https://github.com/erwinel/SNImplementationDocs/blob/navSettingsSchemaV1.json",
    "type": "object",
    "definitions": {
        "navItem": {
            "$id": "#/definitions/navItem",
            "type": "object",
            "required": [ "title" ],
            "properties": {
              "id": {
                "$id": "#/definitions/navItem/properties/id",
                "type": "string",
                "title": "Programmatic Identifier",
                "default": ""
              },
              "title": {
                "$id": "#/definitions/navItem/properties/title",
                "type": "string",
                "title": "Link Title",
                "default": ""
              },
              "heading": {
                "$id": "#/definitions/navItem/properties/heading",
                "type": "string",
                "title": "Page Heading",
                "default": ""
              },
              "description": {
                "$id": "#/definitions/navItem/properties/description",
                "type": "string",
                "title": "Page Description",
                "default": ""
              }
            }
        },
        "navList": {
            "$id": "#/definitions/navList",
            "type": "array",
            "minItems": 1,
            "items": [
                   {
                       "anyOf": [
                            { "$ref": "#/definitions/leafPage" },
                            { "$ref": "#/definitions/leafLink" },
                            { "$ref": "#/definitions/containerWithPage" },
                            { "$ref": "#/definitions/containerWithLink" }
                       ]
                   }
            ]
        },
        "leafPage": {
            "$id": "#/definitions/leafPage",
            "$ref": "#/definitions/navItem",
            "required": [ "pageUrl" ],
            "properties": {
                "pageUrl": {
                  "$id": "#/definitions/leafPage/properties/pageUrl",
                  "type": "string",
                  "title": "Relative page URL",
                  "default": ""
                }
            }
        },
        "leafLink": {
            "$id": "#/definitions/leafLink",
            "$ref": "#/definitions/navItem",
            "required": [ "linkUrl" ],
            "properties": {
                "linkUrl": {
                  "$id": "#/definitions/leafLink/properties/linkUrl",
                  "type": "string",
                  "title": "External link",
                  "default": ""
                }
            }
        },
        "container": {
            "$id": "#/definitions/container",
            "$ref": "#/definitions/navItem",
            "required": [ "navItems" ],
            "properties": {
                "navItems": {
                    "$id": "#/definitions/container/navItems",
                    "$ref": "#/definitions/navList"
                }
            }
        },
        "containerWithPage": {
            "$id": "#/definitions/containerWithPage",
            "$ref": "#/definitions/container",
            "required": [ "pageUrl" ],
            "properties": {
                "pageUrl": {
                  "$id": "#/definitions/containerWithPage/properties/pageUrl",
                  "type": "string",
                  "title": "Relative page URL",
                  "default": ""
                }
            }
        },
        "containerWithLink": {
            "$id": "#/definitions/containerWithLink",
            "$ref": "#/definitions/container",
            "required": [ "linkUrl" ],
            "properties": {
                "linkUrl": {
                  "$id": "#/definitions/containerWithLink/properties/linkUrl",
                  "type": "string",
                  "title": "External link",
                  "default": ""
                }
            }
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [ "navItems" ],
    "properties": {
      "navItems": {
        "$id": "#/properties/navigation",
        "$ref": "#/definitions/navList"
      }
    }
  }