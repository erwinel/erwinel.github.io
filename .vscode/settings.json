{
    "html.suggest.html5": true,
    "html.suggest.angular1": true,
    "jshint.options": { "esversion": 6 },
    "json.schemas": [
        {
            "fileMatch": [
                "/src/sitemap.json"
            ],
            "schema": {
                "type": "array",
                "definitions": {
                    "siteMapNode": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string", "minLength": 1 },
                            "title": { "type": "string" },
                            "hideInNav": { "type": "boolean" }
                        },
                        "required": ["name"]
                    },
                    "siteMapItem": {
                        "allOf": [
                            { "$ref": "#/definitions/siteMapNode" },
                            {
                                "properties": {
                                    "url": { "type": "string", "format": "uri" },
                                    "targetBlank": { "type": "boolean" }
                                }
                            }
                        ],
                        "required": ["url"]
                    },
                    "siteMapContainer": {
                        "allOf": [
                            { "$ref": "#/definitions/siteMapNode"},
                            {
                                "properties": {
                                    "items": {
                                        "type": "array",
                                        "anyOf": [
                                            { "$ref": "#/definitions/siteMapItem"},
                                            { "$ref": "#/definitions/siteMapContainer"}
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                },
                "anyOf": [
                    { "$ref": "#/definitions/siteMapItem"},
                    { "$ref": "#/definitions/siteMapContainer"}
                ]
            }
        }
    ]
}